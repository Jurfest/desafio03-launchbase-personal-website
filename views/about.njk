{% extends "layout.njk" %} <!-- nunjucks: vai para arquivo layout.njk -->

{% block head %} <!-- nunjucks: title desse bloco é recebido em layout.njk -->
  <title> Sobre - {{ about.name }}</title> <!-- no bloco de mesmo nome -->
{% endblock %}

{% block content %} <!-- nunjucks: bloco content é recebido em layout.njk -->

<div id="wrapper">
  <img src="./assets/github_avatar.png" alt="{{ about.avatar_url }}">
  <h1>{{ about.name }}</h1>
  <h2>{{ about.role }}</h2>
  <p>
    {{ about.description }}
  </p>
</div>

<div id="links-footer" class="links">
  {% for link in about.links %}
    <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
  {% endfor %}
</div>

{% endblock %}