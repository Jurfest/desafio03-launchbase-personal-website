{% extends "layout.njk" %}
<!-- nunjucks -->

{% block head %}
  <title>{{item.title}}</title>
{% endblock %}

{% block content %}

  <div id="wrapper" class="video">
    <h1>{{item.title}}</h1>
  </div>

  <section class="video">

    <div class="card" id="{{item.id}}">
      <div class="card_video-container {{ 'featured-wrapper' if item.featured }}">
        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" 
        alt="">
        {% if item.featured %}
          <div class="featured">Featured</div>
        {% endif %}
      </div>
      <div class="card_content">
        <p>{{item.title}}</p>
      </div>
      <div class="card_info">
        <p>{{item.duration}} </p>
        <p class="card_price">{{item.price}}</p>
      </div>
    </div>
    
  </section>

  <script src="/scripts_video.js"></script>

{% endblock %}

